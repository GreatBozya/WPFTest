<Window x:Class="WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="Православный тест" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://i.pinimg.com/736x/92/7f/e9/927fe90902ac73f506aa900f25c2191c.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Name="Next" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="18" Content="Продолжить" Height="50" Width="120" Click="Next_Click"/>
        <Viewbox Height="400">
            <StackPanel>
                <TextBlock Text="Ты любишь Бога?"/>
                <RadioButton Name="a1" Content="Да" Checked="a1_Checked" Width="105"/>
                <RadioButton Name="a2" Content="Нет" Checked="a2_Checked" Width="105"/>
                <RadioButton Name="a3" Content="Хз" Checked="a3_Checked" Width="105"/>
                <RadioButton Name="a4" Content="Кто это?" Checked="a4_Checked" Width="105"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
